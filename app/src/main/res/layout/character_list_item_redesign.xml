<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/character_image_rd"
                android:layout_width="@dimen/character_details_image_width"
                android:layout_height="@dimen/character_details_image_height"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_launcher_background"/>


            <LinearLayout
                android:alpha="0.80"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:background="#5200EC8D"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5">

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/character_name_rd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:maxLines="1"
                        android:lines="1"
                        android:text="Adjudicator Rick"
                        android:ellipsize="end"
                        android:textColor="#0D3940"
                        android:textSize="@dimen/character_details_name_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:background="#B0007983"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/character_status_image_rd"
                        android:layout_width="@dimen/character_details_status_image_width"
                        app:srcCompat="@drawable/ic_alive"
                        android:layout_height="@dimen/character_details_status_image_height"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/character_status_rd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="ALIVE"
                        android:textColor="#A3FFFFFF"
                        android:textSize="@dimen/character_details_status_text_size"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/character_details_spacing_pipe_width"
                        android:layout_height="@dimen/character_details_spacing_pipe_height"
                        app:srcCompat="@drawable/rectangle"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/character_gender_image_rd"
                        android:layout_width="@dimen/character_details_gender_image_width"
                        android:layout_height="@dimen/character_details_gender_image_height"
                        android:src="@drawable/ic_crossbone"/>

                    <TextView
                        android:id="@+id/character_gender_rd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="MALE"
                        android:textColor="#A3FFFFFF"
                        android:textSize="@dimen/character_details_gender_text_size"
                        android:textStyle="bold" />
                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>